<LoginScreen>:

    username: username
    password: password

    BoxLayout:
        orientation: 'vertical'
        padding: (200, 100)

        Label:
            text: 'MITRATEKNIK PARKING SYSTEM\nV1.2\n\n\n'
            halign: 'center'
            font_size: '20sp'
            color: [0,0,1,1]

        TextInput:
            id: username
            hint_text: 'Username'
            multiline: False
            font_size: self.height-30
            halign: 'center'
            valign: 'middle'

        TextInput:
            id: password
            hint_text: 'Password'
            multiline: False
            password: True
            font_size: self.height-30
            halign: 'center'
            valign: 'middle'

        Label:
            text: ''

        Button:
            on_press: root.login()
            text: 'LOGIN'
            font_size: '20sp'

        Label:
            text: '\n\n\nwww.mitrateknik.co.id\nCopyright 2019'
            halign: 'center'
            color: [0,0,1,1]

<GateInScreen>:

    plate_number: plate_number
    clock: clock

    BoxLayout:
        orientation: 'vertical'
        padding: (300, 50)

        Label:
            text: 'GATE IN\n\n'
            halign: 'center'
            font_size: '25sp'
            color: [0,0,1,1]

        Label:
            text: 'RSUD BUMIAYU\n\n'
            halign: 'center'
            font_size: '35sp'
            bold: True
            color: [0,0,1,1]

        Label:
            id: clock
            text: ''
            font_size: '25sp'
            color: [1,0,0,1]

        TextInput:
            id: plate_number
            hint_text: 'NO. PLAT'
            multiline: False
            font_size: self.height-20
            halign: 'center'
            valign: 'middle'

        Button:
            on_press: root.open_gate()
            text: 'JENIS KENDARAAN'
            font_size: '20sp'

        Button:
            on_press: root.open_gate()
            text: 'BUKA GATE'
            font_size: '20sp'
            background_color: [0,1,0,1]

        Label:
            text: ''

        Button:
            on_press: root.logout()
            text: 'LOGOUT'

        Label:
            text: '\n\nMITRATEKNIK PARKING SYSTEM \nV1.2\n\nwww.mitrateknik.co.id\nCopyright 2019'
            halign: 'center'
            color: [0,0,1,1]


